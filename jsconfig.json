{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2015",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src\\components\\*"],
      "@/styles/*": ["src\\styles\\*"],
      "@/pages/*": ["pages\\*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    ".next",
    "coverage",
    ".npm"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["react", "react-dom"]
  }
}
